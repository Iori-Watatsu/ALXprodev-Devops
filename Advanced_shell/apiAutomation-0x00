#!/usr/bin/env bash

# PokÃ©mon API URL for Pikachu
API_URL="https://pokeapi.co/api/v2/pokemon/pikachu"

# Output files
DATA_FILE="data.json"
ERROR_FILE="errors.txt"

# Make API request
HTTP_STATUS=$(curl -s -w "%{http_code}" -o "$DATA_FILE" "$API_URL")

# Check if request was successful
if [ "$HTTP_STATUS" -ne 200 ]; then
    echo "Error: Failed to fetch data (HTTP Status: $HTTP_STATUS)" >> "$ERROR_FILE"
    rm -f "$DATA_FILE"
    exit 1
fi

exit 0
