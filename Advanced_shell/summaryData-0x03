#!/usr/bin/env bash

INPUT_DIR="pokemon_data"
OUTPUT_FILE="pokemon_report.csv"

# Write CSV header
echo "Name,Height (m),Weight (kg)" > "$OUTPUT_FILE"

# Extract data from each JSON file
for file in "$INPUT_DIR"/*.json; do
    name=$(jq -r '.name' "$file")
    height=$(jq -r '.height' "$file" | awk '{printf "%.1f", $1/10}')
    weight=$(jq -r '.weight' "$file" | awk '{printf "%.1f", $1/10}')

    # Capitalize name
    name=$(echo "$name" | awk '{print toupper(substr($0,1,1)) substr($0,2)}')

    echo "$name,$height,$weight" >> "$OUTPUT_FILE"
done

echo "CSV Report generated at: pokemon_report.csv"
echo

# Display CSV
cat "$OUTPUT_FILE"
echo

# Calculate averages using awk
awk -F',' '
NR>1 {
    total_height += $2
    total_weight += $3
    count++
}
END {
    printf "Average Height: %.2f m\n", total_height/count
    printf "Average Weight: %.2f kg\n", total_weight/count
}
' "$OUTPUT_FILE"
